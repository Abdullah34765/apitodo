generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int     @id @default(autoincrement())
  username String
  email    String  @unique
  password String

  todos    Todo[]
}

model Todo {
  id        Int     @id @default(autoincrement())
  title     String
  completed Boolean @default(false)

  userId    Int
  user      Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
